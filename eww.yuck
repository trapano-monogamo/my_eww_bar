(defwindow mybar
	:windowtype "dock"
	:wm-ignore false
	:geometry (geometry
				:width "99%" ; this doesn't work... :(
				:anchor "top center")
	:reserve (struts :side "top" :distance "10%")
	(bar))

(defwidget bar []
	(centerbox
		:class "bar-main"
		:orientation "horizontal"
		:hexpand false
		:space-evenly false
		(box :class "bar-section" (workspaces :names active-workspaces :current-idx current-workspace-index))
		(box)
		(box :class "bar-section" (info))))


; ..:: RIGHT: SYSTEM INFO ::..

(defwidget info []
	(box
		:class "side-stuff"
		:halign "end"
		:space-evenly false
		:spacing "20"
		:css "* {margin-right: 20px; margin-right: 20px;}"
		(box
			:class "sys-info"
			:space-evenly true
			:spacing "15"
			(_volume :volume volume)
			(_backlight :brightness brightness-level)
			(_network :strength net-strength :name net-name)
			(_battery :status {EWW_BATTERY.BAT0.status} :battery {EWW_BATTERY.BAT0.capacity}))
		(sep)
		(box
			:spacing "15"
			:class "time"
			(_time))
		(sep)
		(buttons)))

(defwidget _volume [volume]
	(box
		:hexpand false
		:tooltip "${volume}"
		:class {volume > 100 ? "alert" : "regular"}
		(label :text {volume <= 0 ? "󰝟 " :
			volume < 33 ? "󰕿 " :
				volume < 66 ? "󰖀 " :
					volume < 99 ? "󰕾 " : "󱄡 "})))

(defwidget _backlight [brightness]
	(box
		:hexpand false
		:tooltip "${brightness}"
		(label :text "󰃟 ")))

(defwidget _network [strength name]
	(box
		:hexpand false
		:tooltip "${name} (${strength})"
		(label :text {strength == "" ? "󰤮 " :
			strength < 26 ? "󰤟 " :
				strength < 51 ? "󰤢 " :
					strength < 76 ? "󰤥 " : "󰤨 "})))

(defwidget _battery [status battery]
	(box
		:hexpand false
		:tooltip "${EWW_BATTERY.BAT0.capacity}%"
		:class {battery < 20 ? "alert" : "regular"} 
		(label :text {status == 'Charging' ? "󰂄" :
			battery < 20 ? "󰁻" :
				battery < 40 ? "󰁽" :
					battery < 60 ? "󰁿" :
						battery < 80 ? "󰂁" : "󰁹"})))

(defwidget _time []
	(box
		:hexpand false
		:halign "center"
		:tooltip "${today}"
		:spacing "15"
		(label :text "${time}")))

(defwidget buttons []
	(box
		:halign "end"
		:hexpand false
		:space-evenly true
		:spacing "15"
		(box (button :onclick `i3-msg exit` "󰍃 "))
		(box (button :onclick `reboot` " "))
		(box (button :onclick `shutdown now` " "))))


